<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/Learn_to_speak_alphabets"
        android:id="@+id/home_screen_title"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="#1A0000"
        android:textColorHighlight="#000000"
        android:textStyle="bold|italic"
        android:background="@drawable/alphabet1"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:textSize="60sp"

        />

    <at.markushi.ui.CircleButton
        android:layout_width = "75dp"
        android:layout_height = "75dp"
        app:cb_color="#CC0066"
        app:cb_pressedRingWidth="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src = "@drawable/startbutton"
        android:onClick="startLearning"
        />


